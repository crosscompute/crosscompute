{% extends LIVE_JINJA2 if WITH_REFRESH else BASE_JINJA2 %}

{% block head_html %}
{{ super() -}}
<meta name="description" content="{{ description }}">
<meta property="og:url" content="{{ host_uri }}{{ ROOT_URI }}{{ uri }}" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{{ name }}" />
<meta property="og:image" content="{{ host_uri }}{{ ROOT_URI }}/favicon.ico" />
<meta name="twitter:card" content="summary">
{% endblock %}

{% block header_html %}
<a href="{{ ROOT_URI or '/' }}">Root</a> &gt;
<a href="{{ ROOT_URI }}{{ uri }}">{{ name }}</a>
{% endblock %}

{% block main_html %}
{% if mode_name != 'none' %}
{{ super() }}
{% include 'modeMain.html' %}
{% endif %}
<ul class="_batches">
{% for batch in batches %}
<li>
{{ batch['name'] }}
<a href="{{ ROOT_URI }}{{ uri }}{{ batch['uri'] }}/i">[input]</a>
<a href="{{ ROOT_URI }}{{ uri }}{{ batch['uri'] }}/o">[output]</a>
</li>
{% endfor %}
</ul>
{#
